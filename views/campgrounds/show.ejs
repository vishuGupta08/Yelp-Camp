<% layout('layouts/boilerplate') %>

<body>
    <section class="container">
        <h3>Title: <%= campgrounds.title %></h3>
        <h3>Location: <%= campgrounds.location %></h3>
        <h3>Price: <%= campgrounds.price %></h3>
        <img src="<%=campgrounds.image%>" alt="">
        <h5>Description: <%= campgrounds.description %></h5>
        <a href="/campgrounds/<%=campgrounds._id%>/edit">Edit Details</a>
        <form action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
            <button>Delete</button>
        </form>
    </section>